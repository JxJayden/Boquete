extends ../common/layout

block css
  link(href="/css/page/post.css", rel="stylesheet")


block content
  if common.page.cover
    #index-banner.parallax-container
      .section.no-pad-bot
        .container
          br
          br
          h1.header.center.blue-text.text-lighten-1 #{common.page.title}
          .row.center
            h5.header.col.s12.light #{common.page.description}
          br
          br
      .parallax
        img(src=common.page.cover, alt="post cover img")
  else
    #index-banner.parallax-container.grey.lighten-5
      .section.no-pad-bot
        .container
          br
          br
          h1.header.center.blue-text.text-lighten-2 #{common.page.title}
          .row.center
            h5.header.col.s12.light.blue-text.text-darken-3 #{common.page.description}
          br
          br
  main.post-list.container.row
    each val in posts
      if !val._draft
        article.col.s6.offset-s3.m10.offset-m1.post
          h3.post-title.text-blue.text-darken-1
            a(href= "post/" + val._id) #{val.title}
          section.post-excerpt !{val.content}
          footer.post-meta.grey-text.text-lighten-1.right
            span.post-author #{val.authorName}
            time.post-date(datetime=val.date) #{val.date}
